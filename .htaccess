RewriteEngine On
RewriteBase /

# 1. Skip if it's already a real file/dir in public/
RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -d
RewriteRule ^ - [L]

# 2. Map search and account/login to public/shop.php and public/account/login.php
RewriteRule ^search$ public/shop.php [QSA,L]
RewriteRule ^account/login$ public/account/login.php [L]
RewriteRule ^account/register$ public/account/register.php [L]

# 3. Map admin/login to public/admin/login.php
RewriteRule ^admin/login$ public/admin/login.php [L]

# 4. Extensionless rules for top-level files in public/
RewriteCond %{DOCUMENT_ROOT}/public/$1.php -f
RewriteRule ^([^/.]+)$ public/$1.php [L]

# 5. Route everything else through public/
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ public/$1 [L]
